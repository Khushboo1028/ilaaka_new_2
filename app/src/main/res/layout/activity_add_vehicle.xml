<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.PersonalInfo.Vehicles.AddVehicleActivity"
    android:background="@color/white"
    android:id="@+id/mainrel"
    android:clickable="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:paddingHorizontal="10dp"
        android:id="@+id/back"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Vehicle"
        android:id="@+id/add_veh_text"
        android:textSize="27dp"
        android:fontFamily="@font/avnxt_medium"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/add_veh_text"
        android:layout_marginTop="6dp"
        android:background="#707070"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_veh_text"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:id="@+id/vechrelimg">

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/edittext_borders"
            android:id="@+id/borderview"
            />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@id/borderview"
            android:id="@+id/vehicle_image"
            android:src="@drawable/ic_add_veh"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/inputs"
        android:layout_below="@id/vechrelimg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:maxLength="11"
                android:inputType="textCapCharacters"
                android:background="@drawable/edittext_borders"
                android:id="@+id/vehicle_number"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="Vehicle Number"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edittext_borders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="â–¼  Vehicle Type"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:inputType="textCapSentences|textAutoCorrect"
                android:background="@drawable/edittext_borders"
                android:id="@+id/parking_slot"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="Parking Slot"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:maxLength="25"
                android:inputType="textCapSentences|textAutoCorrect"
                android:background="@drawable/edittext_borders"
                android:id="@+id/vehicle_color"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="Vehicle Color"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/avnxt_demi"
            android:text="Add Vehicle"
            android:id="@+id/add_vehicle"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_grad_borders"
            android:layout_marginHorizontal="40dp"
            />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"/>




</RelativeLayout>
</ScrollView>