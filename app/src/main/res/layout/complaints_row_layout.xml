<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row"
    android:background="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:id="@+id/solve"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/time_created"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Unsolved"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/unsolved_border"
            android:fontFamily="@font/avnxt_regular"
            android:textColor="#E41111"
            android:textSize="14dp"
            android:id="@+id/solved_unsolved"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#707070"
            android:id="@+id/view_solved"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/avnxt_medium"
            android:textSize="14dp"
            android:textColor="#000000"
            android:id="@+id/flat_no_users"
            android:text="B - 303"/>


    </LinearLayout>


    <TextView
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/solve"
        android:fontFamily="@font/avnxt_medium"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Description"
        android:textColor="#9E22313f"
        android:paddingLeft="5dp"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/date_layout"
        android:layout_alignParentRight="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUG"
            android:textSize="15dp"
            android:fontFamily="@font/avnxt_bold"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:id="@+id/month"
            android:layout_above="@+id/date"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/avnxt_bold"
            android:layout_alignParentRight="true"
            />


        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textSize="15dp"
            android:fontFamily="@font/avnxt_bold"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/date"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:59 PM"
        android:id="@+id/time_created"
        android:fontFamily="@font/avnxt_medium"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/solve"
        android:layout_toLeftOf="@id/date_layout" />




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="7dp"
        android:layout_below="@id/description"
        android:layout_marginTop="16dp"
        android:background="#20000000"
        android:id="@+id/view1"/>


</RelativeLayout>