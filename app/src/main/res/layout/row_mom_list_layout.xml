<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row"
    android:paddingTop="10dp"
    android:clickable="true"
    android:background="?android:selectableItemBackground"
    >


    <TextView
        android:id="@+id/meeting_name"
        android:layout_width="wrap_content"
        android:fontFamily="@font/avnxt_demi"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Meeting Name"
        android:paddingLeft="5dp"
        android:maxLines="2"
        android:layout_toLeftOf="@id/time_created"
        android:textColor="#000000"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/meeting_subject"
        android:layout_width="wrap_content"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/avnxt_regular"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="false"
        android:textColor="#000000"
        android:text="Subject"
        android:paddingLeft="5dp"
        android:ellipsize="end"
        android:layout_below="@id/meeting_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:id="@+id/datemaker">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUG"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/avnxt_bold"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:id="@+id/month"
            android:layout_above="@+id/date"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:fontFamily="@font/avnxt_bold"
            android:text="6"
            android:textColor="#000000"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2018"
            android:textSize="15dp"
            android:fontFamily="@font/avnxt_bold"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/date"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:59 PM"
        android:id="@+id/time_created"
        android:fontFamily="@font/avnxt_regular"
        android:textSize="12dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBaseline="@id/meeting_name"
        android:layout_toLeftOf="@id/datemaker" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="7dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:background="#20000000"
        android:id="@+id/view1" />


</RelativeLayout>