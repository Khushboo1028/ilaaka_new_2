<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    tools:context=".Settings.PersonalInfo.ChangeNameActivity">


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/white"
            android:id="@+id/mainrel">


    <RelativeLayout
        android:id="@+id/services_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="5dp"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/service_title"
            android:layout_centerInParent="true"
            android:fontFamily="@font/avnxt_medium"
            android:text="Change Name"
            android:textColor="#000000"
            android:textSize="27dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_margin="7dp"
        android:layout_below="@id/services_text1"
        android:background="#CC000000" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/view1"
        android:id="@+id/current_name_rel">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingVertical="12dp"
            android:fontFamily="@font/avnxt_regular"
            android:textColor="@color/black"
            android:background="@drawable/edittext_borders"
            android:id="@+id/current_name"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avnxt_medium"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:paddingVertical="10dp"
            android:layout_alignParentRight="true"
            android:text="Current Name"
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="center"
            android:textColor="@color/gDark"
            android:textSize="14dp" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_name_rel"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/avnxt_medium"
        android:text="Please Enter Your New Display Name"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:id="@+id/text_new_name"
        android:textColor="@color/gDark"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_new_name"
        android:id="@+id/new_name_rel">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/avnxt_regular"
            android:background="@drawable/edittext_borders"
            android:text=""
            android:layout_marginHorizontal="10dp"
            android:hint="New Display Name"
            android:inputType="textCapSentences|textAutoCorrect"
            android:textSize="15dp"
            android:selectAllOnFocus="true"
            android:id="@+id/new_name"
            android:padding="12dp"
            android:textColor="@color/black"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enter_name"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:gravity="center"/>

    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:minHeight="35dp"
        android:layout_below="@id/new_name_rel"
        android:background="@drawable/btn_grad_borders"
        android:text="CONFIRM"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"
        />


    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>