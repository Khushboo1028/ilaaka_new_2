<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/scrollview"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:fillViewport="true"
    android:isScrollContainer="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainrel"
        android:clickable="true"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/enter_email_rel">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:textSize="15dp"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/avnxt_regular"
                android:selectAllOnFocus="true"
                android:background="@drawable/edittext_borders"
                android:id="@+id/email"
                android:layout_marginHorizontal="30dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/enter_email"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:gravity="center"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/enter_email_rel"
            android:id="@+id/passrel">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:textSize="15dp"
                android:hint="Password"
                android:fontFamily="@font/avnxt_regular"
                android:selectAllOnFocus="true"
                android:background="@drawable/edittext_borders"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_marginHorizontal="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/enter_pass"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="40dp"
                android:gravity="center"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/passrel"
            android:id="@+id/confirm_passrel">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:textSize="15dp"
                android:hint="Confirm Password"
                android:fontFamily="@font/avnxt_regular"
                android:selectAllOnFocus="true"
                android:background="@drawable/edittext_borders"
                android:id="@+id/confirm_password"
                android:inputType="textPassword"
                android:layout_marginHorizontal="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/confirm_pass"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="40dp"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="By continuing you indicate that you have read and agree to our Terms of Service and Privacy Policy."
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:id="@+id/terms_text"
            android:layout_below="@+id/confirm_passrel"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:fontFamily="@font/avnxt_demi"
        android:text="REGISTER"
        android:layout_below="@id/confirm_passrel"
        android:id="@+id/register"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        android:background="@drawable/btn_grad_borders"
        android:layout_marginHorizontal="40dp"
        />


    <ProgressBar
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:indeterminateTint="@color/gDark"/>


</RelativeLayout>

</ScrollView>