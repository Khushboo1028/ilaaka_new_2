<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/scrollview"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:fillViewport="true"
    android:isScrollContainer="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".Login.DetailsFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/welcome_text"

            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/avnxt_medium"
                android:text="Welcome to  "
                android:textColor="@color/black"
                android:textSize="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_demi"
                android:text="My Society"
                android:id="@+id/soc_name"
                android:textColor="@color/gDark"
                android:textSize="18dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="Please Enter Your Personal Details"
            android:fontFamily="@font/avnxt_medium"
            android:textColor="#CC000000"
            android:textSize="20dp"
            android:id="@+id/soc_name_text"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/soc_name_text"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="15dp"
            android:text="Don't worry your personal information is safe with us :)"
            android:fontFamily="@font/avnxt_medium"
            android:textColor="#CC000000"
            android:textSize="14dp"
            android:id="@+id/personal_details_note"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/personal_details_note"
            android:id="@+id/enter_name_rel">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:textSize="15dp"
                android:hint="Enter Name"
                android:inputType="textCapWords"
                android:fontFamily="@font/avnxt_regular"
                android:selectAllOnFocus="true"
                android:background="@drawable/edittext_borders"
                android:id="@+id/name"
                android:layout_marginHorizontal="30dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/enter_name"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="40dp"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/enter_name_rel"
            android:id="@+id/enter_phone_rel">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="40dp"
                android:paddingVertical="10dp"
                android:maxLength="14"
                android:textSize="15dp"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:fontFamily="@font/avnxt_regular"
                android:selectAllOnFocus="true"
                android:background="@drawable/edittext_borders"
                android:id="@+id/phone_number"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/avnxt_regular"
                android:layout_marginStart="36dp"
                android:text="+91"/>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/enter_phone"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="45dp"
                android:gravity="center"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/enter_phone_rel"
            android:id="@+id/enter_flatno_rel">



            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:paddingStart="10dp"-->
                <!--android:paddingVertical="10dp"-->
                <!--android:maxLength="14"-->
                <!--android:textSize="15dp"-->
                <!--android:hint="Enter Flat Number"-->
                <!--android:fontFamily="@font/avnxt_regular"-->
                <!--android:selectAllOnFocus="true"-->
                <!--android:background="@drawable/edittext_borders"-->
                <!--android:id="@+id/flatno"-->
                <!--android:layout_marginHorizontal="30dp"/>-->

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_borders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="13dp"
                android:paddingVertical="10dp"
                android:layout_toLeftOf="@id/img_flat"
                android:text="â–¼"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gLight"
                android:textSize="12dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/enter_flatno"
                android:layout_gravity="center"
                android:id="@+id/img_flat"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:layout_marginRight="45dp"
                android:gravity="center"/>
        </RelativeLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:fontFamily="@font/avnxt_demi"
            android:text="REGISTER"
            android:layout_below="@id/enter_flatno_rel"
            android:layout_marginTop="90dp"
            android:id="@+id/btn_register"
            android:textColor="@color/white"
            android:background="@drawable/btn_grad_borders"
            android:layout_marginHorizontal="40dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:fontFamily="@font/avnxt_demi"
            android:text="CONTACT US"
            android:visibility="gone"
            android:layout_below="@id/enter_flatno_rel"
            android:layout_marginTop="90dp"
            android:id="@+id/btn_contactus"
            android:textColor="@color/white"
            android:background="@drawable/btn_grad_borders"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="15dp"
            />
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@id/progressBar"
            android:layout_centerInParent="true"/>



    </RelativeLayout>
</ScrollView>