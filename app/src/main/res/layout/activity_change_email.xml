<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Settings.PersonalInfo.ChangeNameActivity">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/white"
            android:id="@+id/mainrel">


    <RelativeLayout
        android:id="@+id/services_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="5dp"
           android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/service_title"
            android:layout_centerInParent="true"
            android:fontFamily="@font/avnxt_medium"
            android:text="Change Email"
            android:textColor="#000000"
            android:textSize="27dp" />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Done"-->
            <!--android:layout_marginEnd="20dp"-->
            <!--android:textSize="15dp"-->
            <!--android:id="@+id/done"-->
            <!--android:textColor="@color/gDark"-->
            <!--android:fontFamily="@font/avnxt_bold"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_centerInParent="true"/>-->


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_margin="7dp"
        android:layout_below="@id/services_text1"
        android:background="#1A000000" />

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/text_current_email"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:text="Email here"-->
        <!--android:textSize="15dp"-->
        <!--android:id="@+id/current_email"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:textColor="@color/black"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/view1"
        android:id="@+id/current_email_rel">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingVertical="12dp"
            android:fontFamily="@font/avnxt_regular"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_borders_light"
            android:id="@+id/current_email"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avnxt_medium"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="Current Email"
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="center"
            android:textColor="@color/gDark"
            android:textSize="14dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email not Verified"
        android:layout_below="@id/current_email_rel"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/avnxt_demi"
        android:textColor="@color/incorrect_red"
        android:visibility="gone"
        android:id="@+id/email_not_verified"/>







    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/current_email_rel"
    android:layout_marginTop="20dp"
        android:fontFamily="@font/avnxt_medium"
    android:text="Please Enter Your New Email ID"
    android:textSize="20dp"
    android:paddingLeft="10dp"
    android:id="@+id/text_new_email"
    android:textColor="@color/gDark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avnxt_regular"
        android:layout_below="@id/text_new_email"
        android:id="@+id/note_email"
        android:text="Changing Email will require you to verify it. If not App Services will stop shortly!"
        android:textSize="14dp"
        android:layout_marginHorizontal="10dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_email"
        android:id="@+id/new_email_rel">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/avnxt_regular"
            android:background="@drawable/edittext_borders_light"
            android:text=""
            android:layout_marginHorizontal="10dp"
            android:hint="New Email ID"
            android:textSize="15dp"
            android:selectAllOnFocus="true"
            android:inputType="textEmailAddress"
            android:id="@+id/new_email"
            android:padding="12dp"
            android:textColor="@color/black"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enter_email"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="40dp"
            android:gravity="center"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_email_rel"
        android:id="@+id/pass_rel">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/avnxt_regular"
            android:text=""
            android:background="@drawable/edittext_borders_light"
            android:layout_marginHorizontal="10dp"
            android:textSize="15dp"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:padding="12dp"
            android:textColor="@color/black"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enter_pass"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="40dp"
            android:gravity="center"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:minHeight="35dp"
        android:layout_below="@id/pass_rel"
        android:background="@drawable/btn_grad_borders"
        android:text="CONFIRM"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"
        />



    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        />

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>