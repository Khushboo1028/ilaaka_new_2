<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services.GuestVehicleView"
    android:background="#FFFFFF"
    android:id="@+id/mainrel"
    android:clickable="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:paddingHorizontal="10dp"
        android:id="@+id/back"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guest Vehicle"
        android:id="@+id/guestvehtext"
        android:textSize="27dp"
        android:fontFamily="@font/avnxt_medium"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/guestvehtext"
        android:layout_marginTop="6dp"
        android:background="#707070"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/guestvehtext"
        android:gravity="center"
        android:id="@+id/veh_img_rel">

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/edittext_borders"
            android:id="@+id/borderview"
            />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@id/borderview"
            android:id="@+id/vehicle_image"
            android:src="@drawable/show_vehicle_guest"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/veh_img_rel">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:maxLength="25"
                android:fontFamily="@font/avnxt_regular"
                android:background="@drawable/edittext_borders"
                android:id="@+id/vehicle_number"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="Vehicle Number"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:fontFamily="@font/avnxt_regular"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edittext_borders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="  Vehicle Type"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>