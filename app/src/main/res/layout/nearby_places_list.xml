<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:id="@+id/nearbyy">

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name Here"
            android:fontFamily="@font/avnxt_demi"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/gDark"
            />

        <TextView
            android:id="@+id/place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Address Here"
            android:padding="5dp"
            android:lines="2"
            android:textSize="15dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="#000000"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/place_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.9"
                android:textSize="15dp"
                android:fontFamily="@font/avnxt_regular"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/first_star"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/one_star"/>
