<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/filter_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avnxt_demi"
        android:text="TRANSACTIONS STATUS"
        android:textColor="@color/gDark"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:id="@+id/status_text"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/status_text"
        android:layout_marginTop="10dp"
        android:id="@+id/status_btns_1"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved"
            android:background="#1A707070"
            android:textColor="@color/greenSolved"
            android:id="@+id/btn_approved"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejected"
            android:background="#1A707070"
            android:textColor="@color/incorrect_red"
            android:id="@+id/btn_rejected"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="3"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/status_btns_1"
        android:layout_marginTop="10dp"
        android:id="@+id/status_btns_2"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:background="#1A707070"
            android:textColor="@color/pendingYellow"
            android:id="@+id/btn_pending"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL"
            android:background="#1A707070"
            android:textColor="#000000"
            android:id="@+id/btn_all"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="3"/>



    </LinearLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_grad_borders"
        android:text="Apply Filters"
        android:textColor="@color/white"
        android:id="@+id/btn_apply_filter"
        android:layout_below="@id/status_btns_2"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="40dp"
        android:minHeight="35dp" />


</RelativeLayout>
