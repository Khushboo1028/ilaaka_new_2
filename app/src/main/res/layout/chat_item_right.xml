<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05/05/19"
        android:id="@+id/date"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/avnxt_regular"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:paddingHorizontal="8dp"
        android:background="@drawable/btn_grad_borders"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginEnd="80dp"
        >
    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:id="@+id/profile_image"-->
        <!--android:src="@drawable/ic_service_default"/>-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_left"
            android:paddingBottom="6dp"
            android:id="@+id/mess_rel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A - 402"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/avnxt_demi"
                android:textSize="14dp"
                android:textColor="@color/gDark"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/flat_no"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="hello"
                android:layout_below="@id/flat_no"
                android:id="@+id/show_message"
                android:textColor="@color/black"
                android:fontFamily="@font/avnxt_medium"
                android:textSize="18dp"
                android:paddingStart="18dp"
                android:layout_marginBottom="10dp"
                android:paddingEnd="8dp"
                android:paddingVertical="8dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="0dp"
                android:id="@+id/image_card"
                android:layout_below="@id/flat_no"
                android:visibility="gone"
                app:cardCornerRadius="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:layout_gravity="center"
                android:maxWidth="200dp"
                android:background="@null"
                android:id="@+id/text_image" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:59"
                android:textSize="10dp"
                android:fontFamily="@font/avnxt_medium"
                android:layout_marginStart="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/timestamp" />




        </RelativeLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_seen"
        android:text="seen"
        android:layout_below="@id/mess_rel"
        android:visibility="gone"
        />

    </RelativeLayout>
</RelativeLayout>