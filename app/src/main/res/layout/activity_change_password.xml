            android:textColor="@color/black"
            android:background="@drawable/edittext_borders"
            android:id="@+id/current_email"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avnxt_medium"
            android:gravity="center"
           android:background="@null"
            android:layout_marginTop="3dp"
            android:paddingVertical="10dp"
            android:layout_alignParentRight="true"
            android:text="Current Email"
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="center"
            android:textColor="@color/gDark"
            android:textSize="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/current_email_rel"
        android:id="@+id/current_pass_rel">


        <EditText
