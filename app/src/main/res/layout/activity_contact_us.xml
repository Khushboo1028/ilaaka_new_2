<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainrel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:paddingHorizontal="10dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:text="Contact Us"
            android:fontFamily="@font/avnxt_demi"
            android:layout_centerInParent="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/back"
            android:layout_margin="7dp"
            android:background="#1A000000" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/topbar"
        android:layout_marginTop="20dp"
        android:id="@+id/help_icon"
        android:src="@drawable/ic_contact_us_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gDark"
        android:textSize="20dp"
        android:layout_below="@id/help_icon"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:text="We will get in touch as soon as possible :)"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/avnxt_demi"
        android:id="@+id/contact_us_text"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_fields"
        android:orientation="vertical"
        android:layout_below="@id/contact_us_text">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:id="@+id/name_rel">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/avnxt_regular"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_borders"
                android:id="@+id/name"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Name"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:id="@+id/email_rel">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/avnxt_regular"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_borders"
                android:id="@+id/email"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Email"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:id="@+id/phone_rel">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/avnxt_regular"
                android:inputType="phone"
                android:maxLength="10"
                android:background="@drawable/edittext_borders"
                android:id="@+id/phone"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Phone"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:id="@+id/message_rel">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:paddingStart="10dp"
                android:paddingEnd="65dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/avnxt_regular"
                android:inputType="textMultiLine|textCapSentences|textAutoComplete"
                android:background="@drawable/edittext_borders"
                android:id="@+id/message"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_text"
                android:fontFamily="@font/avnxt_medium"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Message"
                android:background="@color/white"
                android:padding="5dp"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="14dp" />

        </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:fontFamily="@font/avnxt_demi"
            android:text="SEND"
            android:layout_marginTop="16dp"
            android:id="@+id/send"
            android:textColor="@color/white"
            android:background="@drawable/btn_grad_borders"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>



        </RelativeLayout>

    </ScrollView>
</RelativeLayout>

