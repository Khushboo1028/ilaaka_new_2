<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/round_pay_grid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/service_info">

        <TextView
            android:id="@+id/service_provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Provider Name"
            android:fontFamily="@font/avnxt_demi"
            android:textSize="18dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/gDark"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contact">


            <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:fontFamily="@font/avnxt_regular"
            android:textSize="15dp"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            />

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9617147714"
                android:fontFamily="@font/avnxt_regular"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textColor="#000000"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/aadhar">


            <TextView
                android:id="@+id/aadhar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar:"
                android:fontFamily="@font/avnxt_regular"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/aadhar_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17147714171477"
                android:fontFamily="@font/avnxt_regular"
                android:textSize="15dp"
                android:layout_marginStart="5dp"
                android:textColor="#000000"
                />


        </LinearLayout>



    </LinearLayout>

    <!--<ImageView-->
