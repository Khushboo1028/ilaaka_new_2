<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/scrollview"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:fillViewport="true"
    android:isScrollContainer="true">


    <RelativeLayout
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/mainrel"
        android:clickable="true"
        >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:id="@+id/unamerel">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingVertical="10dp"
                    android:maxLines="1"
                    android:paddingEnd="26dp"
                    android:fontFamily="@font/avnxt_regular"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_borders"
                    android:id="@+id/username"
                    android:layout_marginHorizontal="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avnxt_medium"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_marginTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingVertical="10dp"
                    android:layout_alignParentRight="true"
                    android:text="Email"
                    android:layout_marginHorizontal="40dp"
                    android:layout_gravity="center"
                    android:textColor="@color/gDark"
                    android:textSize="14dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/unamerel"
                android:id="@+id/passrel">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingVertical="10dp"
                    android:fontFamily="@font/avnxt_regular"
                    android:background="@drawable/edittext_borders"
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_marginHorizontal="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avnxt_medium"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="Password"
                    android:layout_marginHorizontal="40dp"
                    android:layout_gravity="center"
                    android:textColor="@color/gDark"
                    android:textSize="14dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:text="By continuing you indicate that you have read and agree to our Terms of Service and Privacy Policy."
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:id="@+id/terms_text"
                android:layout_below="@+id/passrel"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/incorrect_red"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/passrel"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:id="@+id/invalid_text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:fontFamily="@font/avnxt_demi"
            android:text="LOGIN"
            android:layout_below="@id/terms_text"
            android:layout_marginTop="30dp"
            android:id="@+id/login"
            android:textColor="@color/white"
            android:background="@drawable/btn_grad_borders"
            android:layout_marginHorizontal="40dp"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:gravity="center"
            android:fontFamily="@font/avnxt_medium"
            android:id="@+id/forgot_pass"
            android:paddingVertical="10dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:text="Forgot Password ?"
            android:textColor="@color/gDark"
            android:textSize="18dp" />





        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:id="@+id/progressBar"
            android:indeterminateTint="@color/gDark"/>

    </RelativeLayout>


</ScrollView>


