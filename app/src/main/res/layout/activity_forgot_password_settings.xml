<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Settings.PersonalInfo.ForgotPasswordSettings">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/white"
            android:id="@+id/mainrel">

    <RelativeLayout
        android:id="@+id/services_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="5dp"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:fontFamily="@font/avnxt_medium"
            android:text="Forgot Password"
            android:textColor="#000000"
            android:textSize="27dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_margin="7dp"
        android:layout_below="@id/services_text1"
        android:background="#CC000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:text="Please Enter your Email ID registered with us to reset password."
        android:fontFamily="@font/avnxt_regular"
        android:layout_below="@id/view1"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/note_text"
        android:textColor="@color/gDark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/note_text"
        android:id="@+id/email_rel">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/avnxt_regular"
            android:maxLength="40"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="@color/gDark"
            android:background="@drawable/edittext_borders"
            android:id="@+id/email"
            android:layout_marginHorizontal="30dp"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:fontFamily="@font/avnxt_medium"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:paddingVertical="10dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:text="Email"-->
            <!--android:layout_marginHorizontal="40dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:textColor="@color/gDark"-->
            <!--android:textSize="12dp" />-->

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:text="A link will be sent to the email address with instructions to reset password"
        android:fontFamily="@font/avnxt_regular"
        android:layout_below="@id/email_rel"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/res_pass_rel"
        android:textColor="@color/gDark"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:fontFamily="@font/avnxt_demi"
        android:text="Reset Password"
        android:layout_below="@id/res_pass_rel"
        android:id="@+id/btn_reset_password"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_grad_borders"
        android:layout_marginHorizontal="40dp"
        />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>